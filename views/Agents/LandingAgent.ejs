<!DOCTYPE html>
<html>
    <head>
        <title>Real Estate Management System</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand">R.E.M.S</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/Agent">Agents</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Property Search</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link " href="#">Submit Property</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#">Contact</a>
                  </li>
              </ul>
            </div>
          </nav>
          <div class="jumbotron jumbotron-fluid">
            <div class="container">
              <h1 class="display-4">Fluid jumbotron</h1>
              <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
              <a href="#" class="btn btn-primary btn-lg">Register as Agent</a>
              <a href="/Agent/login" class="btn btn-primary btn-lg">Login</a>
            </div>
          </div>  
<div class="container">
    <div class="row">
        <%var k=0%>
        <%for(var i=0;i<Agents.length;i++){%>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%=Agents[i].Agent_img_link%>" alt="Card image cap"
                    style="height: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Name: <span id=AgentName><%=Agents[i].Name%></span></h5>
                    <p class="card-text"><strong>Joining Date </strong><%=Agents[i].Agent_Joining_Date%></p>
                    <p><strong>Contact: </strong>
                    <%if(Agents[i].Agent_ID===phno[k].Agent_ID){%>
                        <%while(Agents[i].Agent_ID===phno[k].Agent_ID){%>
                            <p><%=phno[k].Phone_Number%> </p>
                            <%k++%> 
                            <%if(k>=phno.length) break;}%>
                    <%}else{%>
                        Not been Provided by this Agent
                    <%}%>
                    </p>
            </div>
        </div>
       </div>
      <%}%>
        </div>
     </div>
<%-include("../partials/footer")%>